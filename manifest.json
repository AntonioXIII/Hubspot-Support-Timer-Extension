{
  "name" : "Hubspot Support Timer",
  "version" : "1.0.0",
  "description" : "For keeping track of time spent on Hubspot support tickets.",
  "permissions": ["storage", "declarativeContent"],
  "background": {
    "scripts": ["js/extension/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/timer-icon-16x16.png",
      "32": "images/timer-icon-32x32.png",
      "48": "images/timer-icon-48x48.png",
      "128": "images/timer-icon-128x128.png"
    }
  },
  "icons": {
    "16": "images/timer-icon-16x16.png",
    "32": "images/timer-icon-32x32.png",
    "48": "images/timer-icon-48x48.png",
    "128": "images/timer-icon-128x128.png"
  },
  "manifest_version": 2
}